@model WarehouseProductCombinationModel

@using Nop.Core.Domain.Catalog
@using Nop.Core.Domain.Warehouses
@using Nop.Web.Areas.Admin.Models.Warehouses

@{
    //page title
    ViewBag.PageTitle = T("Admin.Warehouses.WarehouseProductCombination.EditCategoryDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Warehouses list");
}

<form asp-controller="WarehouseProductCombination" asp-action="Edit" asp-route-warehouseId="@Model.WarehouseId" method="post" id="war-category-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Warehouses.WarehouseProductCombination.EditCategoryDetails") - @Model.WarehouseProductId
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Warehouses.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            @* <button type="button" onclick="javascript:OpenWindow('@(Url.RouteUrl<Category>(new { SeName = Model.SeName }))', 800, 600, true); return false;" class="btn btn-info">
                <i class="far fa-eye"></i>
                @T("Admin.Common.Preview")
            </button> *@
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="category-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.CategoryDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="war-category-delete" />