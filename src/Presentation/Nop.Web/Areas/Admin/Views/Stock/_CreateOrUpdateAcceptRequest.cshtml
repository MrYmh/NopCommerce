                <stock-card asp-name="StockHistory-items" asp-icon="fas fa-search-plus" asp-title="@T("Admin.Common.StockActions")" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdateAcceptRequest.Action", Model)</stock-card>

                @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.CategoryDetailsBlock, additionalData = Model })
