                <stock-card asp-name="StockHistory-info" asp-icon="fas fa-info" asp-title="@T("Admin.Warehouses.Stock.RequestData")"  asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdateAcceptRequest.Info", Model)</stock-card>
